<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.myapplication.feature.highlight.HighlightFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/highlight_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/border_divider"
                app:strokeWidth="1dp">

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/theme_toggle_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    app:singleSelection="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/theme_identity_button"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/highlight_theme_identity"
                        app:cornerRadius="999dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/theme_connectivity_button"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/highlight_theme_connectivity"
                        app:cornerRadius="999dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/theme_perspective_button"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/highlight_theme_perspective"
                        app:cornerRadius="999dp" />
                </com.google.android.material.button.MaterialButtonToggleGroup>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/highlight_explanation_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/border_divider"
                app:strokeWidth="1dp">

                <!-- ðŸ”¹ ê²¹ì¹¨ì„ ìœ„í•œ ì»¨í…Œì´ë„ˆ -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- ðŸŸ¢ ì°¨ê³¡ì´: ì¹´ë“œ ìš°ì¸¡ ìƒë‹¨ -->
                    <ImageView
                        android:id="@+id/imgChagokHighlight"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="12dp"
                        android:src="@drawable/chagok_pho"
                        android:contentDescription="@drawable/chagok_pho"
                        android:alpha="0.95" />

                    <!-- ðŸ”¹ ê¸°ì¡´ ì¹´ë“œ ë‚´ìš© -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/explanation_letter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceHeadlineMedium"
                            android:textColor="@color/secondary_accent"
                            android:textStyle="bold"
                            tools:text="I" />

                        <TextView
                            android:id="@+id/explanation_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            tools:text="Identity Â· ë‚˜ë‹¤ìš´ ê¸°ì–µ" />

                        <TextView
                            android:id="@+id/explanation_body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="@color/text_secondary"
                            tools:text="Identity measures how deeply this memory is embedded in who I am." />

                        <TextView
                            android:id="@+id/explanation_guide"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="@color/text_secondary"
                            tools:text="This memory represents events that are essential when explaining who I am as a person." />
                    </LinearLayout>

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/highlight_empty_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/border_divider"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/highlight_empty_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/highlight_empty_state"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- TODO: ranking ì„¹ì…˜ ë””ìžì¸ì„ polish í•  ìˆ˜ ìžˆë„ë¡ ì—¬ë°±ê³¼ ìƒ‰ì„ ì¡°ì •í•˜ì„¸ìš”. -->
            <include
                android:id="@+id/section_identity"
                layout="@layout/item_highlight_section" />

            <include
                android:id="@+id/section_connectivity"
                layout="@layout/item_highlight_section" />

            <include
                android:id="@+id/section_perspective"
                layout="@layout/item_highlight_section" />



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
